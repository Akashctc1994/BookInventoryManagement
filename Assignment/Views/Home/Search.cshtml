@using Assignment.Models;
@model List<Books>
@{
    /**/

    ViewBag.Title = "Search";
    Layout = "~/Views/_DemoLayout.cshtml";
}
<h2 align="center"> Search For Book</h2>
<hr />
<h3 align="center">Book Fields</h3>
<hr />

@using (Html.BeginForm())
{
    <table align="center">
        <tr>
            <td>
                @Html.Label("Title :")
            </td>
            <td>
                @Html.TextBox("Titles")
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Author :")
            </td>
            <td>
                @Html.TextBox("Author")
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("ISBN :")
            </td>
            <td>
                @Html.TextBox("ISBN")
            </td>
        </tr>
        <tfoot>
            <tr>
                <td></td>
                <td>
                    <input type="submit" id="btnSubmit" value="Do it" />
                </td>
            </tr>
        </tfoot>
    </table>
}
<br />
<br />
@if (IsPost)
{
    <table align="center">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Publisher</th>
            <th>Year</th>
            <th>Modifing Operations</th>
        </tr>
        @{
            foreach (Books items in Model)
            {
                <tr>
                    <td>@items.Titles</td>
                    <td>@items.Author</td>
                    <td>@items.ISBN</td>
                    <td>@items.Publisher</td>
                    <td>@items.Year</td>
                    <td>
                        <a href="/Home/Details/@items.Id">Details</a>
                        <a href="/Home/Edit/@items.Id">Edit</a>
                        <a href="/Home/Delete/@items.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </table>
}
