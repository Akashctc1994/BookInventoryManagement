
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <title>Index</title>
    <script type="text/javascript">
        $(function () {
            $('#urlddl').change(function () {
                var url = $(this).val();
                if (url != null && url != '') {
                    window.location.href = url;
                }
            });
        });
    </script>
</head>
<body>
    <div>
        <h2>Book Inventory Management</h2>
        <hr />
       
            @Html.DropDownList("url", new SelectList(new[]{
        new SelectListItem { Text = "Add New", Value = Url.Action("AddNew") },
        new SelectListItem { Text = "Search", Value = Url.Action("Search") },
        new SelectListItem { Text = "Modify", Value = Url.Action("Modify") },}, "Value", "Text"),
        "-- Select ---", new { id = "urlddl" })
        
        <hr />
    </div>
</body>
</html>
